<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView 
        android:id="@+id/setting_list_itemiv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/setting_list_item"
        android:layout_alignBottom="@+id/setting_list_item"
        android:layout_alignParentLeft="true"
        android:src="@drawable/element_list"
        />
    
    <RelativeLayout
        android:id="@+id/setting_list_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/setting_list_itemiv" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textSize="22dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="hello"
            />

    </RelativeLayout>
    
</RelativeLayout>
