<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.emple.activity.EleTvSizeActivity" >

    <include 
        android:id="@+id/tvsize_include"
        layout="@layout/head"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"/>

     <ListView 
        android:id="@+id/tvsize_list"
        android:layout_below="@+id/tvsize_include"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:divider="#00ffffff">
    </ListView>
    
     <Button
        android:id="@+id/tvsize_default"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvsize_list"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:text="恢复默认设置"
        android:textColor="#FFFFFF"
        android:background="@drawable/btshape"
         />
    
</RelativeLayout>
