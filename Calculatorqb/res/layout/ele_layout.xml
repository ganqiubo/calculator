<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
     >
    
    <RelativeLayout
        android:id="@+id/ele_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ele_ll1"
        android:layout_marginRight="5dp"
         >
        
        <TextView
        android:id="@+id/ele_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="92"
        android:paddingTop="5dp"
		android:paddingLeft="5dp"
        android:textSize="@dimen/ele_size1"
        />
    
	    <TextView
	        android:id="@+id/ele_symble"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:text="U"
	        android:paddingTop="5dp"
			android:paddingLeft="5dp"
	        android:textSize="@dimen/ele_size1"
	        android:layout_alignParentRight="true"
	        />
	    
	    <RelativeLayout
	        android:id="@+id/ele_rl1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/ele_num"
	        android:layout_alignLeft="@+id/ele_num"
	        android:layout_alignRight="@+id/ele_symble"
	         >
	
	        <RelativeLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	             >
				<TextView
			        android:id="@+id/ele_name_zh"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" 
			        android:text="铀"
			        android:paddingTop="5dp"
			        android:paddingLeft="5dp"
			        android:textSize="@dimen/ele_size1"
		        	/>	
				<TextView
			        android:id="@+id/ele_name_margin"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" 
			        android:text="铀"
			        android:textSize="@dimen/ele_size1"
			        android:paddingTop="5dp"
			        android:paddingLeft="5dp"
			        android:layout_alignTop="@+id/ele_name_zh"
				    android:layout_alignBottom="@+id/ele_name_zh"
				    android:layout_toRightOf="@+id/ele_name_zh"
				    android:textColor="#00000000"
		        	/>	
				<ImageView
				    android:id="@+id/ele_radioactive"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" 
				    android:src="@drawable/radio"
				    android:paddingTop="6dp"
				    android:paddingLeft="1dp"
				    android:paddingRight="1dp"
				    android:paddingBottom="1dp"
				    android:layout_alignTop="@+id/ele_name_margin"
				    android:layout_alignBottom="@+id/ele_name_margin"
				    android:layout_alignLeft="@+id/ele_name_margin"
				    android:layout_alignRight="@+id/ele_name_margin"
				    />
			</RelativeLayout>
	    </RelativeLayout>
	    
	    <TextView
	        android:id="@+id/ele_name_us"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignRight="@+id/ele_rl1"
	        android:layout_below="@+id/ele_rl1"
	        android:paddingLeft="5dp"
	        android:paddingTop="5dp"
	        android:text="Uranium"
	        android:textSize="@dimen/ele_size2" />
	    
	    <TextView
	        android:id="@+id/ele_atomic_mass"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignRight="@+id/ele_name_us"
	        android:layout_below="@+id/ele_name_us"
	        android:paddingLeft="5dp"
	        android:paddingTop="5dp"
	        android:text="238.02891"
	        android:textSize="@dimen/ele_size2" />
        
	</RelativeLayout>
    
    <LinearLayout
        android:id="@+id/ele_ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="2"
            android:textSize="@dimen/ele_size2"
            />
        
    </LinearLayout>
    
</RelativeLayout>