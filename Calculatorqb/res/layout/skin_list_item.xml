<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tvsizebg"
    android:orientation="vertical" >

    <TextView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textSize="16sp"
    	android:text="skin"
    	android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:textColor="#676767"
        android:id="@+id/skin_item_note"
        android:layout_alignParentLeft="true"
        android:paddingLeft="20dp"
        />
    
    <ImageView 
        android:id="@+id/skin_item_ok"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentRight="true"
    	android:background="@null"
    	android:layout_alignTop="@+id/skin_item_note"
    	android:layout_alignBottom="@+id/skin_item_note"
    	android:src="@drawable/ok"
    	android:padding="2dp"
    	android:layout_marginRight="20dp"
        />
    
     <View 
        android:layout_width="match_parent"
    	android:layout_height="1px"
    	android:background="#DDDDDD"
    	android:layout_alignLeft="@+id/skin_item_note"
    	android:layout_below="@+id/skin_item_note"
        /> 
    
</RelativeLayout>
