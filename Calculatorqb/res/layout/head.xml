<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#0CACF4">
    
    <RelativeLayout 
        android:id="@+id/settinhg_head"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
        <ImageButton
	        android:id="@+id/mhead_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:padding="10dp"
	        android:background="@null"
	        android:src="@drawable/selector_back_click" />

	    <TextView
	        android:id="@+id/mhead_title"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_alignTop="@+id/mhead_back"
	        android:layout_alignBottom="@+id/mhead_back"
	        android:gravity="center"
	        android:padding="10dp"
	        android:text="更多 "
	        android:textColor="#fff"
	        android:textSize="22sp" />
    </RelativeLayout>

</RelativeLayout>
