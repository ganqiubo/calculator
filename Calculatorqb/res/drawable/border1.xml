<layer-list xmlns:android="http://schemas.android.com/apk/res/android">   
	<!-- 连框颜色值 -->
	<item>   
	      <shape>   
	            <solid android:color="@color/border" />   
	      </shape>   
	</item>   
	<!-- 主体背景颜色值 -->  
	<item android:top="1px" android:left="1px" android:right="1px">   
	     <selector> 
	         <item android:state_pressed="true" android:drawable="@color/white1"></item> 
	         <item android:drawable="@color/yellow1"></item>  
	     </selector>        
	</item>  
</layer-list>  